{
  "manifest_version": 2,
  "name": "Stopwatch Tab",
  "version": "1.0.6",

  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "128": "icon_128.png",
    "72": "icon_72.png",
    "48": "icon_48.png",
    "32": "icon_32.png"
  },

  "browser_action": {
    "default_title": "Stopwatch Tab",
    "default_icon": "icon_32.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs", "*://*/*"
  ]
}
